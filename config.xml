<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.todomvc" version="1.1.4" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <hook src="hooks/build.sh" type="after_platform_add" />
    <name>ecp-plugin</name>
    <description>
    Electrolux Connected Platform application for Hybrid API testing.
  </description>
    <author email="dev@electrolux.com" href="http://electrolux.com">
    Electrolux
  </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <hook src="hooks/overridegradleconfig.sh" type="after_platform_add" />
    <preference name="android-minSdkVersion" value="18" />
    <engine name="ios" spec="^4.5.3" />
    <plugin name="cordova-plugin-add-swift-support" spec="^1.7.0" />
    <plugin name="ecp-plugin" spec="git+ssh://git@bitbucket.electrolux.io:7999/sdk/ecp-plugin.git" />
    <plugin name="cordova-plugin-cocoapod-support" spec="^1.3.0" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
    <engine name="android" spec="~6.3.0" />
</widget>
